rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user role from Firestore
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Classes collection - public read, teacher write
    match /classes/{classId} {
      allow read: if true;  // Public read for registration
      allow create: if request.auth != null && getUserRole() == 'teacher';
      allow update, delete: if request.auth != null && 
        getUserRole() == 'teacher' &&
        resource.data.createdBy == request.auth.uid;
    }
    
    // Users collection - authenticated read, own profile write
    match /users/{userId} {
      allow read: if request.auth != null;  // Any authenticated user can read
      allow create: if request.auth != null && (request.auth.uid == userId || getUserRole() == 'teacher');
      allow update: if request.auth != null && (
        request.auth.uid == userId ||  // User can update own profile
        getUserRole() == 'teacher'      // Teacher can update student profiles (for soft delete)
      );
      allow delete: if request.auth != null && 
        (request.auth.uid == userId || getUserRole() == 'teacher');
    }
    
    // Tasks collection - authenticated read, teacher write
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && getUserRole() == 'teacher';
      allow update, delete: if request.auth != null && 
        getUserRole() == 'teacher' &&
        resource.data.createdBy == request.auth.uid;
    }
    
    // Submissions collection - authenticated read, student write own
    match /submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        getUserRole() == 'student' &&
        request.resource.data.studentId == request.auth.uid;
      allow update: if request.auth != null && (
        (getUserRole() == 'student' && resource.data.studentId == request.auth.uid) ||
        (getUserRole() == 'teacher')
      );
      allow delete: if request.auth != null && getUserRole() == 'teacher';
    }
    
    // Exams collection - public read for guests
    match /exams/{examId} {
      allow read: if true;
      allow create: if request.auth != null && getUserRole() == 'teacher';
      allow update, delete: if request.auth != null && 
        getUserRole() == 'teacher' &&
        resource.data.createdBy == request.auth.uid;
    }
    
    // Exam results collection - public create for guests
    match /exam_results/{resultId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update: if request.auth != null && (
        (getUserRole() == 'student' && resource.data.studentId == request.auth.uid) ||
        (getUserRole() == 'teacher')
      );
      allow delete: if request.auth != null && getUserRole() == 'teacher';
    }
    
    // Exam sessions collection - public read/write for guests
    match /exam_sessions/{sessionId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true; // Allow anyone to delete (students delete on submit, guests delete on submit)
    }

    // Guest attempts collection - Public Create/Read, No Update/Delete (Immutable Log)
    match /guest_attempts/{attemptId} {
      allow read: if true; // Public read to check for existing attempts
      allow create: if true; // Public create to log new attempt
      allow update: if false; // Immutable
      allow delete: if request.auth != null && getUserRole() == 'teacher'; // Only teacher can reset
    }
    
    // Curriculum Overviews collection - Teacher only
    match /curriculumOverviews/{coId} {
      allow read: if request.auth != null && 
        getUserRole() == 'teacher' &&
        resource.data.teacherId == request.auth.uid;
      allow create: if request.auth != null && getUserRole() == 'teacher';
      allow update, delete: if request.auth != null && 
        getUserRole() == 'teacher' &&
        resource.data.teacherId == request.auth.uid;
    }
  }
}
